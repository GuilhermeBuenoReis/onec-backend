{
  "name": "onec-backend-v2",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "dev:seed": "pnpm run seed:env && tsx watch --env-file=.env src/server.ts",
    "start": "pnpm run seed:env && node dist/server.js",
    "seed:env": "tsx --env-file=.env src/infra/db/seeds/env-seed-runner.ts",
    "build": "tsup src --out-dir dist --format esm",
    "test": "vitest",
    "lint": "biome check . --apply",
    "db:migrate": "drizzle-kit push",
    "seed": "tsx src/infra/db/seed.ts",
    "drizzle:push": "drizzle-kit push --config=drizzle.config.ts --tsconfig=tsconfig.drizzle.json",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts --tsconfig=tsconfig.drizzle.json"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "11.0.1",
    "@fastify/jwt": "9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "bcrypt": "^6.0.0",
    "chalk": "^5.4.1",
    "cookie": "^1.0.2",
    "dayjs": "^1.11.13",
    "dotenv": "^17.1.0",
    "drizzle-orm": "^0.44.2",
    "fastify": "5.4.0",
    "fastify-type-provider-zod": "5.0.1",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-connection-string": "^2.9.1",
    "postgres": "^3.4.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.17",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.3",
    "tsup": "^7.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
